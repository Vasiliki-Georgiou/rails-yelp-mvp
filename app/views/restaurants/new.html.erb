<h1>Add your restaurant here</h1>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, as: :select, collection: Restaurant::CATEGORIES%>
  <%= f.submit class: "btn btn-primary p-3 border-2" %>
  <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-warning p-3 border-2" %>
<% end %>
