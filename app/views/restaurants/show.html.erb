<header>
  <h1 class="text-center mt-2 mb-4">Restaurant details</h1>
</header>

<div class="card-wrapper">
    <div class="card" style="width: 35rem;">
      <div class="card-header d-flex justify-content-center">
        <h5 class="card-title"><%= @restaurant.name %></h5>
      </div>
      <div class="card-body d-flex flex-column align-items-center">
        <p class="card-text"><span class="fw-bold">Address:</span> <%= @restaurant.address %></p>
        <p class="card-text"><span class="fw-bold">Telephone number:</span> <%= @restaurant.phone_number %></p>
          <p class="card-text"><span class="fw-bold">Cuisine:</span> <%= @restaurant.category %></p>

          <%= link_to "Add a Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary mb-3" %>
          <%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-primary" %>
      </div>
    </div>
</div>

<h4 class="text-center mt-3">Reviews</h4>
<div class="reviews-wrapper d-flex justify-content-center">
  <div >
      <ul class="list-group mt-1">
        <% @restaurant.reviews.each do |review| %>
          <li class="text-center mt-3 border-top list-group-item pt-3" style="width: 35rem;">
            <strong>Rating:</strong>
            <%= review.rating %>
            <p><em>"<%= review.content %>"</em></p>
          </li>
        <% end %>
      </ul>
  </div>
</div>
