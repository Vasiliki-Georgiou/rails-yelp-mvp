<h1 class="mt-3 mb-5">Restaurant details</h1>

<div class="card">
  <div class="card-header d-flex justify-content-center">
    <h5 class="card-title"><%= @restaurant.name %></h5>
  </div>
  <div class="card-body d-flex flex-column align-items-center">
    <p class="card-text"><%= @restaurant.address %></p>
     <p class="card-text"><%= @restaurant.phone_number %></p>
      <p class="card-text">Cuisine: <%= @restaurant.category %></p>
      <div class="d-flex flex-column align-items-center">
        <p><strong>Reviews</strong></p>
        <ul class="list-group border-top mt-2">
          <% @restaurant.reviews.each do |review| %>
            <p class="text-center mt-3">Rating: <strong>
              <%= review.rating %>
            </strong>
            </p>
            <p>
              <em>
                <%= review.content %>
              </em>
            </p>
          <% end %>
        </ul>
      </div>

      <%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-primary" %>
  </div>
</div>
