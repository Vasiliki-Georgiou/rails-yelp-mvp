<header>
  <h1 class="text-center mt-2 mb-4">Welcome to Restaurant finder</h1>
</header>

<ul class="list-unstyled">
    <div class="d-flex flex-wrap">
        <% @restaurants.each do |restaurant| %>
        <div class="card mb-3 ms-3" style="width: 18rem; height: 14rem;">
          <div class="card-body d-flex flex-column justify-content-center align-items-center">
            <li  class="card-title text-center fw-bold">
              <%= link_to restaurant.name, restaurant_path(restaurant), class:"text-decoration-none text-dark fs-4" %>
            </li>
             <%= link_to "Modify restaurant", edit_restaurant_path(restaurant), class:"btn btn-light mb-2 p-3 rounded" %>
             <span class="delete">
                <%= link_to "x", restaurant_path(restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-decoration-none text-dark fs-4"  %>
             </span>
          </div>
      </div>
        <% end %>

      </div>
    </div>
    <div class="d-flex justify-content-center mb-5">
      <%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-dark p-3 border-2" %>
    </div>
  </ul>
