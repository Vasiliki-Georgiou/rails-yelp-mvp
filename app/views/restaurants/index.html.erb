<h1 class="text-center mt-2 mb-4">Welcome to Restaurant finder</h1>

<ul class="list-unstyled">
    <div class="d-flex flex-wrap">
        <% @restaurants.each do |restaurant| %>
        <div class="card mb-3 ms-3" style="width: 18rem; height: 14rem;">
          <div class="card-body d-flex flex-column justify-content-center align-items-center">
            <li  class="card-title text-center fw-bold">
              <%= link_to restaurant.name, restaurant_path(restaurant) %>
            </li>
             <%= link_to "Modify restaurant", edit_restaurant_path(restaurant), class:"btn btn-light mb-2" %>
             <%= link_to "Delete restaurant", restaurant_path(restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>
          </div>
      </div>
        <% end %>

      </div>
    </div>
    <div class="d-flex justify-content-center mb-5">
      <%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-warning p-3 border-2" %>
    </div>
  </ul>
