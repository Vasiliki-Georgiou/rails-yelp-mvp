<header>
  <h1 class="text-center mt-2 mb-4">Modify an existing restaurant here</h1>
</header>

<div class="form-wrapper">
    <%= simple_form_for(@restaurant) do |f| %>
      <div class="mb-3">
        <%= f.input :name, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.input :address, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.input :phone_number %>
      </div>
      <div class="mb-3">
        <%= f.input :category, as: :select, collection: Restaurant::CATEGORIES%>
      </div>
      <div class="d-flex justify-content-center mt-2">
        <%= f.submit class: "btn btn-dark p-2" %>
      </div>
    <% end %>
</div>
