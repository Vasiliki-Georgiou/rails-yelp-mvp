<header>
  <h1 class="text-center mt-2 mb-4">Add a new review</h1>
</header>

<div class="form-wrapper">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :rating %>
      <%= f.input :content %>
      <div class="d-flex justify-content-center mt-2">
        <%= f.submit "Submit review", class: "btn btn-primary" %>
      </div>
    <% end %>
</div>
